@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Index";
}

<div class="whiteBackground border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Name List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Tags" asp-action="Create">
                <i class="fa fa-plus" aria-hidden="true"></i>
                &nbsp; Create New
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">No Name...</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>

                    <th>

                    </th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>


                        <td style="width:150px">

                            <partial name="_OperationsButtonsPratial" model="item.Id" />

                        </td>

                    </tr>
                }
            </table>
        }
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


