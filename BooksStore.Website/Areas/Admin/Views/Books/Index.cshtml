@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";

}

<div class="whiteBackground border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">News List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Books" asp-action="Create">
                <i class="fa fa-plus" aria-hidden="true"></i>
                &nbsp; Create New
            </a>
        </div>
    </div>
    <div>
        @if (Model.Count() == 0)
        {
            <p class="text-danger">No News...</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ImageUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ReadCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CreatedAt)
                    </th>

                    <th>
                        @Html.DisplayName("Image")
                    </th>

                    <th>

                    </th>

                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ReadCount)
                </td>
                <td>
                    @Html.DisplayFor(m => item.CreatedAt)
                </td>
                <td>
                    <img src="~/Upload/Images/@item.ImageUrl" style="width:50px;height:50px;" />
                </td>

                <td style="width:150px">

                    <partial name="_OperationsButtonsPratial" model="item.Id" />

                </td>

            </tr>
                }
            </table>
        }
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




