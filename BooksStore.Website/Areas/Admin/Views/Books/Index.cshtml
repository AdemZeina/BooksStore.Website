@model IEnumerable<Book>
@{
    ViewData["Page"] = "Books";
    ViewData["Title"] = "Home";

}


<div class="col-md-12">
    <div class="card table-card">
        <div class="card-header">
            <h5>Books Management</h5>
            <div class="col-12 text-right">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Books" asp-action="Create">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    &nbsp; Create New
                </a>
            </div>
        </div>
        <div class="card-block">
            <div class="row">
               
                <div class="col-md-12" style="padding:35px !important">
                    <div class="dt-responsive table-responsive">
                        @if (Model.Count() == 0)
                        {
                            <p class="text-danger">No Books...</p>
                        }
                        else
                        {
                            <table id="base-style" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Author)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.Price)
                                        </th>
                                        <th>
                                            Tag Name
                                        </th>
                                        <th>
                                            @Html.DisplayName("Image")
                                        </th>

                                        <th>

                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(m => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Author)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.Tag.Name)
                                            </td>

                                            <td>
                                                <img src="~/Upload/Images/@item.ImageUrl" style="width:50px;height:50px;" />
                                            </td>

                                            <td style="width:225px">

                                                <partial name="_OperationsButtonsPratial" model="item.Id" />

                                            </td>

                                        </tr>
                                    }
                                </tbody>

                            </table>
                        }
                    </div>
                </div>
       
            </div>
           
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Admin/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Admin/bower_components/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Admin/pages/data-table/js/jszip.min.js"></script>
    <script src="~/Admin/pages/data-table/js/pdfmake.min.js"></script>
    <script src="~/Admin/pages/data-table/js/vfs_fonts.js"></script>
    <script src="~/Admin/bower_components/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Admin/bower_components/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Admin/bower_components/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Admin/bower_components/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Admin/bower_components/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Admin/pages/data-table/js/data-table-custom.js"></script>
    <script type="text/javascript" src="~/Admin/js/script.js"></script>
}




